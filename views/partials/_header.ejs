<header>
  <nav id="navbar" class="sticky">
    <div>
      <h1>Smart TODO List</h1>
      <% if (userID) { %>
      <p>Hi <%= userName %>! What to-do today? </p>
    </div>

    <div id='userAuthentication'>

      <form class="form-inline" action="/users/logout" method="POST">
        <button type="submit" class="btn btn-danger" >Logout</button>
      </form>


      <% } else { %>

        <div class = "form-inline">

          <form action="/users/register" method="GET">
            <button style ="margin-inline-end: 10px" type ="submit" class="btn btn-primary" >Register</button>
          </form>

          <form action="/users/login" method="GET">
            <button type="submit" class="btn btn-primary" >Login</button>
          </form>
        </div>

      <% } %>

    </div>

  </nav>
</header>
